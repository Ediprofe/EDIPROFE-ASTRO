---
import BaseLayout from '../layouts/BaseLayout.astro';
import LessonCard from '../components/Content/LessonCard.astro';
import ThemeToggle from '../components/UI/ThemeToggle.astro';
import { getCollection } from 'astro:content';
import { buildNavigationFromLessonsWithCollection, mergeNavigations } from '../utils/navigation-generator.js';

// Obtener navegaci√≥n de cada colecci√≥n
let navigation: any = {};
let allLessonsWithMateria: any[] = [];

try {
  const matematicas = await getCollection('matematicas');
  const navMat = buildNavigationFromLessonsWithCollection(matematicas, 'matematicas');
  navigation = mergeNavigations(navigation, navMat);
  matematicas.forEach(l => allLessonsWithMateria.push({ ...l, materia: 'matematicas' }));
} catch (e) {}

try {
  const fisica = await getCollection('fisica');
  const navFis = buildNavigationFromLessonsWithCollection(fisica, 'fisica');
  navigation = mergeNavigations(navigation, navFis);
  fisica.forEach(l => allLessonsWithMateria.push({ ...l, materia: 'fisica' }));
} catch (e) {}

try {
  const quimica = await getCollection('quimica');
  const navQui = buildNavigationFromLessonsWithCollection(quimica, 'quimica');
  navigation = mergeNavigations(navigation, navQui);
  quimica.forEach(l => allLessonsWithMateria.push({ ...l, materia: 'quimica' }));
} catch (e) {}

try {
  const ciencias = await getCollection('ciencias');
  const navCie = buildNavigationFromLessonsWithCollection(ciencias, 'ciencias');
  navigation = mergeNavigations(navigation, navCie);
  ciencias.forEach(l => allLessonsWithMateria.push({ ...l, materia: 'ciencias' }));
} catch (e) {}

// Obtener materias disponibles
const materias = Object.entries(navigation).map(([key, value]: [string, any]) => ({
  slug: key,
  name: value.name,
  lessonCount: Object.values(value.unidades).reduce((acc: number, unidad: any) => {
    return acc + Object.values(unidad.bloques).reduce((acc2: number, bloque: any) => {
      return acc2 + bloque.lecciones.length;
    }, 0);
  }, 0)
}));

const materiaIcons: Record<string, string> = {
  matematicas: 'üßÆ',
  fisica: 'üöÄ',
  quimica: '‚öõÔ∏è',
  ciencias: 'üåç',
};
---

<BaseLayout title="Inicio">
  <div class="home-container">
    <header class="hero">
      <div class="hero-content">
        <div class="hero-logo">
          <span class="logo-icon">üéì</span>
          <span class="logo-text">Ediprofe</span>
        </div>
        <h1 class="hero-title">
          Gu√≠a Educativa para <span class="highlight">Ciencias</span> y <span class="highlight">Matem√°ticas</span>
        </h1>
        <p class="hero-subtitle">
          Explora lecciones estructuradas con videos explicativos, material did√°ctico y recursos descargables que simplifican el aprendizaje de conceptos complejos. Cada unidad tem√°tica contiene m√∫ltiples lecciones organizadas de forma progresiva para facilitar el aprendizaje paso a paso.
        </p>
        <div class="hero-cta">
          <a href="#materias" class="btn-primary">Explorar Materias</a>
          <a href="#recientes" class="btn-secondary">Ver Lecciones</a>
        </div>
      </div>
      <div class="hero-decoration"></div>
    </header>

    <main class="main-content">
      {materias.length > 0 ? (
        <section class="materias-section" id="materias">
          <div class="section-header">
            <h2 class="section-title">Materias Disponibles</h2>
            <p class="section-desc">Selecciona una materia para comenzar tu aprendizaje</p>
          </div>
          
          <div class="materias-grid">
            {materias.map(materia => (
              <a href={`/${materia.slug}`} class="materia-card">
                <div class="materia-icon-wrapper">
                  <span class="materia-icon">{materiaIcons[materia.slug] || 'üìñ'}</span>
                </div>
                <div class="materia-info">
                  <h3 class="materia-name">{materia.name}</h3>
                  <p class="materia-count">{materia.lessonCount} {materia.lessonCount === 1 ? 'lecci√≥n' : 'lecciones'}</p>
                </div>
                <span class="materia-arrow">‚Üí</span>
              </a>
            ))}
          </div>
        </section>
      ) : (
        <section class="empty-state">
          <div class="empty-icon">üìù</div>
          <h2>¬°Bienvenido!</h2>
          <p>A√∫n no hay contenido disponible.</p>
          <div class="empty-instructions">
            <h3>Para comenzar:</h3>
            <ol>
              <li>Crea carpetas en <code>src/content/</code> siguiendo la estructura:
                <pre>matematicas/algebra/bloque-01-fundamentos/01-introduccion.md</pre>
              </li>
              <li>Escribe tu contenido en Markdown con f√≥rmulas LaTeX</li>
              <li>Ejecuta <code>npm run dev</code> para ver los cambios</li>
            </ol>
          </div>
        </section>
      )}

      {materias.length > 0 && (
        <section class="recent-section" id="recientes">
          <div class="section-header">
            <h2 class="section-title">Lecciones Recientes</h2>
            <p class="section-desc">Contin√∫a donde lo dejaste o explora nuevo contenido</p>
          </div>
          <div class="lessons-grid">
            {allLessonsWithMateria.slice(0, 6).map((lesson: any) => {
              return (
                <LessonCard 
                  title={lesson.data?.title || 'Sin t√≠tulo'}
                  description={lesson.data?.description}
                  href={`/${lesson.materia}/${lesson.slug}`}
                  materia={lesson.materia}
                />
              );
            })}
          </div>
        </section>
      )}
    </main>

    <footer class="footer">
      <div class="footer-content">
        <div class="footer-main">
          <div class="footer-brand">
            <span class="footer-logo">üéì</span>
            <span class="footer-name">Ediprofe</span>
          </div>
          <p class="footer-tagline">Gu√≠a educativa para ciencias y matem√°ticas</p>
        </div>
        <p class="footer-copyright">¬© 2025 Ediprofe</p>
      </div>
    </footer>
  </div>
  
  <ThemeToggle />
</BaseLayout>

<style>
  .home-container {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .hero {
    background: linear-gradient(135deg, #0f172a 0%, #1e3a5f 40%, #1d4ed8 100%);
    color: white;
    padding: 4rem 2rem 5rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -20%;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.3) 0%, transparent 70%);
    pointer-events: none;
  }

  .hero::after {
    content: '';
    position: absolute;
    bottom: -30%;
    left: -10%;
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(251, 191, 36, 0.15) 0%, transparent 70%);
    pointer-events: none;
  }

  .hero-decoration {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      radial-gradient(circle at 20% 80%, rgba(255,255,255,0.03) 1px, transparent 1px),
      radial-gradient(circle at 80% 20%, rgba(255,255,255,0.03) 1px, transparent 1px),
      radial-gradient(circle at 40% 40%, rgba(255,255,255,0.02) 1px, transparent 1px);
    background-size: 60px 60px, 80px 80px, 100px 100px;
    pointer-events: none;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .hero-logo {
    display: inline-flex;
    align-items: center;
    gap: 0.625rem;
    background: rgba(255,255,255,0.1);
    backdrop-filter: blur(8px);
    padding: 0.625rem 1.25rem;
    border-radius: 50px;
    margin-bottom: 2rem;
    border: 1px solid rgba(255,255,255,0.15);
  }

  .hero-logo .logo-icon {
    font-size: 1.5rem;
  }

  .hero-logo .logo-text {
    font-size: 1.125rem;
    font-weight: 700;
    letter-spacing: -0.01em;
  }

  .hero-title {
    font-size: 2.75rem;
    font-weight: 800;
    margin: 0 0 1.5rem 0;
    line-height: 1.15;
    letter-spacing: -0.02em;
  }

  .hero-title .highlight {
    background: linear-gradient(90deg, #fbbf24, #f59e0b);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.0625rem;
    opacity: 0.9;
    margin: 0 auto 2.5rem auto;
    max-width: 640px;
    line-height: 1.7;
  }

  .hero-cta {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.75rem;
    background: linear-gradient(135deg, #fbbf24, #f59e0b);
    color: #1e293b;
    font-weight: 600;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.2s;
    box-shadow: 0 4px 14px rgba(251, 191, 36, 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(251, 191, 36, 0.4);
    text-decoration: none;
  }

  .btn-secondary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.75rem;
    background: rgba(255,255,255,0.1);
    color: white;
    font-weight: 600;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.2s;
    border: 1px solid rgba(255,255,255,0.2);
  }

  .btn-secondary:hover {
    background: rgba(255,255,255,0.15);
    text-decoration: none;
  }

  .main-content {
    flex: 1;
    max-width: 1100px;
    margin: 0 auto;
    padding: 3rem 2rem;
    width: 100%;
  }

  .section-header {
    margin-bottom: 2rem;
  }

  .section-title {
    font-size: 1.75rem;
    color: var(--text-primary);
    margin: 0 0 0.5rem 0;
  }

  .section-desc {
    color: var(--text-secondary);
    margin: 0;
  }

  .materias-section {
    margin-bottom: 4rem;
  }

  .materias-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.25rem;
  }

  .materia-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border-color, #e2e8f0);
    border-radius: 16px;
    text-decoration: none;
    color: var(--text-primary);
    transition: all 0.25s;
    position: relative;
    overflow: hidden;
  }

  .materia-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, #2563eb, #3b82f6);
    opacity: 0;
    transition: opacity 0.25s;
  }

  :global(html.dark) .materia-card {
    border-color: #334155;
    background: #1e293b;
  }

  .materia-card:hover {
    border-color: var(--color-primary);
    box-shadow: 0 12px 30px rgba(37, 99, 235, 0.15);
    transform: translateY(-4px);
    text-decoration: none;
  }

  .materia-card:hover::before {
    opacity: 1;
  }

  .materia-icon-wrapper {
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #2563eb, #1d4ed8);
    border-radius: 14px;
    flex-shrink: 0;
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.25);
  }

  .materia-icon {
    font-size: 1.75rem;
  }

  .materia-info {
    flex: 1;
  }

  .materia-name {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0 0 0.375rem 0;
    color: var(--text-primary);
  }

  .materia-count {
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin: 0;
    display: flex;
    align-items: center;
    gap: 0.375rem;
  }

  .materia-count::before {
    content: '';
    width: 6px;
    height: 6px;
    background: #22c55e;
    border-radius: 50%;
  }

  .materia-arrow {
    font-size: 1.5rem;
    color: var(--color-primary);
    opacity: 0;
    transform: translateX(-8px);
    transition: all 0.25s;
  }

  .materia-card:hover .materia-arrow {
    opacity: 1;
    transform: translateX(0);
  }

  .recent-section .section-header {
    margin-bottom: 1.5rem;
  }

  .lessons-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1rem;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    background: var(--bg-secondary);
    border-radius: 12px;
    border: 2px dashed #e2e8f0;
  }

  .empty-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
  }

  .empty-state h2 {
    font-size: 2rem;
    color: var(--text-primary);
    margin: 0 0 0.5rem 0;
  }

  .empty-state > p {
    color: var(--text-secondary);
    font-size: 1.125rem;
    margin: 0 0 2rem 0;
  }

  .empty-instructions {
    text-align: left;
    max-width: 600px;
    margin: 0 auto;
    background: #f8fafc;
    padding: 1.5rem;
    border-radius: 8px;
  }

  .empty-instructions h3 {
    font-size: 1rem;
    margin: 0 0 1rem 0;
    color: var(--text-primary);
  }

  .empty-instructions ol {
    margin: 0;
    padding-left: 1.5rem;
  }

  .empty-instructions li {
    margin-bottom: 1rem;
    color: var(--text-secondary);
  }

  .empty-instructions code {
    background: #e2e8f0;
    padding: 0.2em 0.4em;
    border-radius: 3px;
    font-size: 0.875em;
  }

  .empty-instructions pre {
    background: #1e293b;
    color: #e2e8f0;
    padding: 0.75rem;
    border-radius: 6px;
    font-size: 0.8rem;
    overflow-x: auto;
    margin-top: 0.5rem;
  }

  .footer {
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
    padding: 3rem 2rem 2rem;
    color: white;
  }

  .footer-content {
    max-width: 1100px;
    margin: 0 auto;
    text-align: center;
  }

  .footer-main {
    margin-bottom: 1.5rem;
  }

  .footer-brand {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .footer-logo {
    font-size: 1.5rem;
  }

  .footer-name {
    font-size: 1.25rem;
    font-weight: 700;
    background: linear-gradient(90deg, #fbbf24, #f59e0b);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .footer-tagline {
    margin: 0;
    color: rgba(255,255,255,0.7);
    font-size: 0.9375rem;
  }

  .footer-copyright {
    margin: 0;
    color: rgba(255,255,255,0.5);
    font-size: 0.8125rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255,255,255,0.1);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero {
      padding: 3rem 1.25rem 3.5rem;
    }

    .hero-logo {
      padding: 0.5rem 1rem;
      margin-bottom: 1.5rem;
    }

    .hero-logo .logo-icon {
      font-size: 1.25rem;
    }

    .hero-logo .logo-text {
      font-size: 1rem;
    }

    .hero-title {
      font-size: 1.625rem;
    }

    .hero-subtitle {
      font-size: 0.9375rem;
      line-height: 1.6;
    }

    .hero-cta {
      flex-direction: column;
      align-items: center;
    }

    .btn-primary,
    .btn-secondary {
      padding: 0.75rem 1.5rem;
      font-size: 0.9375rem;
      width: 100%;
      max-width: 280px;
      justify-content: center;
    }

    .main-content {
      padding: 2rem 1rem;
    }

    .section-title {
      font-size: 1.375rem;
    }

    .materias-grid {
      grid-template-columns: 1fr;
    }

    .materia-card {
      padding: 1rem;
    }

    .materia-icon-wrapper {
      width: 48px;
      height: 48px;
    }

    .materia-icon {
      font-size: 1.5rem;
    }

    .materia-name {
      font-size: 1rem;
    }

    .lessons-grid {
      grid-template-columns: 1fr;
    }

    .footer {
      padding: 2rem 1.25rem 1.5rem;
    }

    .footer-logo {
      font-size: 1.25rem;
    }

    .footer-name {
      font-size: 1.125rem;
    }
  }

  @media (max-width: 480px) {
    .hero {
      padding: 2.5rem 1rem 3rem;
    }

    .hero-title {
      font-size: 1.375rem;
    }

    .hero-subtitle {
      font-size: 0.875rem;
    }

    .main-content {
      padding: 1.5rem 0.75rem;
    }

    .section-title {
      font-size: 1.25rem;
    }
  }
</style>
