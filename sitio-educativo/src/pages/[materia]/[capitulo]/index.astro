    font-size: 0.625rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-muted, #94a3b8);
  }

  .breadcrumb-materia {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.25rem 0.625rem 0.25rem 0.25rem;
    background: var(--bg-primary);
    border: 1px solid var(--border-color, rgba(0,0,0,0.08));
    border-radius: 100px;
