---
import { getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Footer from '../../../components/Layout/Footer.astro';
import { formatName, formatBlockName } from '../../../utils/navigation-generator.js';
import { allMeta } from '../../../utils/load-meta.js';
import CollapsibleSidebar from '../../../components/Navigation/CollapsibleSidebar.astro';
import MobileMenu from '../../../components/Navigation/MobileMenu.astro';

// Configuraci√≥n de materias (consistente con sidebar)
const materiaConfig: Record<string, { icon: string; color: string; gradient: string }> = {
  matematicas: { icon: 'üßÆ', color: '#ef4444', gradient: 'linear-gradient(135deg, #ef4444, #dc2626)' },
  fisica: { icon: 'üöÄ', color: '#3b82f6', gradient: 'linear-gradient(135deg, #3b82f6, #2563eb)' },
  quimica: { icon: '‚öõÔ∏è', color: '#a855f7', gradient: 'linear-gradient(135deg, #a855f7, #9333ea)' },
  ciencias: { icon: 'üåç', color: '#22c55e', gradient: 'linear-gradient(135deg, #22c55e, #16a34a)' }
};

export async function getStaticPaths() {
  const paths: any[] = [];
  const collections = ['matematicas', 'fisica', 'quimica', 'ciencias'];
  
  for (const materia of collections) {
    try {
      const lessons = await getCollection(materia as any);
      const capitulos = new Set<string>();
      
      lessons.forEach(lesson => {
        const parts = lesson.slug.split('/');
        if (parts[0]) capitulos.add(parts[0]);
      });
      
      capitulos.forEach(capitulo => {
        paths.push({
          params: { materia, capitulo },
          props: { materia, capitulo }
        });
      });
    } catch (e) {}
  }
  
  return paths;
}

const { materia, capitulo } = Astro.props;
const config = materiaConfig[materia] || materiaConfig.fisica;

// Obtener lecciones de este cap√≠tulo
let lessons: any[] = [];
try {
  const allLessons = await getCollection(materia as any);
  lessons = allLessons.filter(l => l.slug.startsWith(`${capitulo}/`));
} catch (e) {}

// Agrupar por tema
const temas: Record<string, any[]> = {};
lessons.forEach(lesson => {
  const parts = lesson.slug.split('/');
  const tema = parts[1];
  if (!temas[tema]) temas[tema] = [];
  temas[tema].push(lesson);
});

// Ordenar lecciones dentro de cada tema
Object.values(temas).forEach(arr => {
  arr.sort((a, b) => a.slug.localeCompare(b.slug));
});

// Obtener nombres desde metadatos
const materiaName = formatName(materia);
const capituloKey = `${materia}/${capitulo}`;
const capituloName = (allMeta as any)[capituloKey]?.name || formatName(capitulo);

const getMetaName = (tema: string) => {
  const key = `${materia}/${capitulo}/${tema}`;
  return (allMeta as any)[key]?.name || formatBlockName(tema);
};

// Calcular √≠ndice del cap√≠tulo
let capituloIndex = 0;
try {
  const allLessons = await getCollection(materia as any);
  const allCapitulos = [...new Set(allLessons.map(l => l.slug.split('/')[0]))].sort();
  capituloIndex = allCapitulos.indexOf(capitulo);
} catch (e) {}
---

<BaseLayout title={`${capituloName} - ${materiaName}`}>
  <MobileMenu currentPath={Astro.url.pathname} />
  
  <div class="page-container">
    <CollapsibleSidebar currentPath={Astro.url.pathname} />
    
    <main class="main-content">
      <!-- Header -->
      <header class="page-header" style={`--accent: ${config.color}`}>
        <div class="header-content">
          <div class="header-top">
            <a href={`/${materia}`} class="back-link">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 12H5M12 19l-7-7 7-7"/>
              </svg>
              <span>Volver a {materiaName}</span>
            </a>
          </div>
          
          <div class="header-main">
            <div class="header-icon-wrapper" style={`background: ${config.gradient}`}>
              <span class="header-number">{capituloIndex + 1}</span>
            </div>
            <div class="header-text">
              <span class="header-label">Cap√≠tulo {capituloIndex + 1}</span>
              <h1 class="header-title">{capituloName}</h1>
              <p class="header-desc">{Object.keys(temas).length} {Object.keys(temas).length === 1 ? 'tema' : 'temas'}</p>
            </div>
          </div>
        </div>
      </header>

      <!-- Breadcrumb -->
      <nav class="breadcrumb">
        <div class="breadcrumb-inner">
          <div class="breadcrumb-item">
            <span class="breadcrumb-label">Materia</span>
            <a href={`/${materia}`} class="breadcrumb-materia" style={`--accent: ${config.color}`}>
              <span class="breadcrumb-materia-icon">{config.icon}</span>
              <span>{materiaName}</span>
            </a>
          </div>
          <span class="breadcrumb-sep">‚Ä∫</span>
          <div class="breadcrumb-item">
            <span class="breadcrumb-label">Cap√≠tulo</span>
            <span class="breadcrumb-current">{capituloName}</span>
          </div>
        </div>
      </nav>

      <!-- Lista de Temas -->
      <section class="temas-section">
        <div class="temas-grid">
          {Object.entries(temas).map(([tema, lecciones], temaIndex) => {
            const leccionesCount = lecciones.length;
            
            return (
              <a 
                href={`/${materia}/${capitulo}/${tema}`}
                class="tema-card-link" 
                style={`--delay: ${temaIndex * 0.1}s; --accent: ${config.color}`}
              >
                <div class="tema-card-inner">
                  <div class="tema-indicator" style={`background: ${config.gradient}`}></div>
                  <div class="tema-info">
                    <span class="tema-label">Tema {temaIndex + 1}</span>
                    <h3 class="tema-name">{getMetaName(tema)}</h3>
                    <span class="tema-stats">{leccionesCount} {leccionesCount === 1 ? 'lecci√≥n' : 'lecciones'}</span>
                  </div>
                  <div class="tema-arrow">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                  </div>
                </div>
              </a>
            );
          })}
        </div>
      </section>
    </main>
  </div>
  
  <Footer variant="minimal" />
</BaseLayout>

<style>
  @import '../../../styles/pages/capitulo.css';
</style>
