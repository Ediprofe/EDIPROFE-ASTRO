    align-items: center;
    gap: 1rem;
  }

  .tema-indicator {
    width: 4px;
    height: 48px;
    border-radius: 2px;
    flex-shrink: 0;
  }

  .tema-info {
    flex: 1;
    min-width: 0;
  }

  .tema-label {
    display: block;
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--accent);
    margin-bottom: 0.125rem;
  }

  .tema-name {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 0.25rem 0;
  }

  .tema-stats {
    font-size: 0.8125rem;
    color: var(--text-secondary);
  }

  .tema-arrow {
    color: var(--text-muted, #94a3b8);
    transition: all 0.25s;
  }

  .tema-card-link:hover .tema-arrow {
    color: var(--accent);
    transform: translateX(4px);
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @media (max-width: 768px) {
    .main-content {
      padding: 1rem;
    }

    .page-header {
      padding: 1.5rem;
    }

    .header-main {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .header-icon-wrapper {
      width: 56px;
      height: 56px;
    }

    .header-number {
      font-size: 1.5rem;
    }

    .header-title {
