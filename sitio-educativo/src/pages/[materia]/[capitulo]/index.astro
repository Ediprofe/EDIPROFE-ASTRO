---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Footer from '../../../components/Layout/Footer.astro';
import { formatName, formatBlockName } from '../../../utils/navigation-generator.js';
import { getMetaName as getMetaNameFromStore } from '../../../utils/load-meta';
import CollapsibleSidebar from '../../../components/Navigation/CollapsibleSidebar.astro';
import MobileMenu from '../../../components/Navigation/MobileMenu.astro';
import { 
  getLessonsByMateria, 
  filterLessonsByPath, 
  getUniqueCapitulos 
} from '../../../utils/content-helpers';
import { MATERIA_SLUGS, type MateriaSlug, type Lesson } from '../../../types/content';
import { materiaConfig } from '../../../config/materias';

export async function getStaticPaths() {
  const paths: Array<{ params: { materia: string; capitulo: string }; props: { materia: MateriaSlug; capitulo: string } }> = [];
  
  for (const materia of MATERIA_SLUGS) {
    const lessons = await getLessonsByMateria(materia);
    const capitulos = getUniqueCapitulos(lessons);
    
    for (const capitulo of capitulos) {
      paths.push({
        params: { materia, capitulo },
        props: { materia, capitulo }
      });
    }
  }
  
  return paths;
}

interface Props {
  materia: MateriaSlug;
  capitulo: string;
}

const { materia, capitulo } = Astro.props;
const config = materiaConfig[materia] ?? materiaConfig.fisica;

// Obtener lecciones de este capítulo (tipado)
const allLessons = await getLessonsByMateria(materia);
const lessons = filterLessonsByPath(allLessons, `${capitulo}/`);

// Agrupar por tema
const temas: Record<string, Lesson[]> = {};
for (const lesson of lessons) {
  const parts = lesson.slug.split('/');
  const tema = parts[1];
  if (tema) {
    if (!temas[tema]) temas[tema] = [];
    temas[tema].push(lesson);
  }
}

// Ordenar lecciones dentro de cada tema
Object.values(temas).forEach(arr => {
  arr.sort((a, b) => a.slug.localeCompare(b.slug));
});

// Obtener nombres desde metadatos
const materiaName = formatName(materia);
const capituloKey = `${materia}/${capitulo}`;
const capituloName = getMetaNameFromStore(capituloKey, formatName(capitulo));

const getMetaName = (tema: string): string => {
  const key = `${materia}/${capitulo}/${tema}`;
  return getMetaNameFromStore(key, formatBlockName(tema));
};

// Calcular índice del capítulo
const allCapitulos = getUniqueCapitulos(allLessons);
const capituloIndex = allCapitulos.indexOf(capitulo);
---

<BaseLayout title={`${capituloName} - ${materiaName}`}>
  <MobileMenu currentPath={Astro.url.pathname} />
  
  <div class="page-container">
    <CollapsibleSidebar currentPath={Astro.url.pathname} />
    
    <main class="main-content">
      <!-- Header -->
      <header class="page-header" style={`--accent: ${config.color}`}>
        <div class="header-content">
          <div class="header-top">
            <a href={`/${materia}`} class="back-link">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 12H5M12 19l-7-7 7-7"/>
              </svg>
              <span>Volver a {materiaName}</span>
            </a>
          </div>
          
          <div class="header-main">
            <div class="header-icon-wrapper" style={`background: ${config.gradient}`}>
              <span class="header-number">{capituloIndex + 1}</span>
            </div>
            <div class="header-text">
              <span class="header-label">Capítulo {capituloIndex + 1}</span>
              <h1 class="header-title">{capituloName}</h1>
              <p class="header-desc">{Object.keys(temas).length} {Object.keys(temas).length === 1 ? 'tema' : 'temas'}</p>
            </div>
          </div>
        </div>
      </header>

      <!-- Breadcrumb -->
      <nav class="breadcrumb">
        <div class="breadcrumb-inner">
          <div class="breadcrumb-item">
            <span class="breadcrumb-label">Materia</span>
            <a href={`/${materia}`} class="breadcrumb-materia" style={`--accent: ${config.color}`}>
              <span class="breadcrumb-materia-icon">{config.icon}</span>
              <span>{materiaName}</span>
            </a>
          </div>
          <span class="breadcrumb-sep">›</span>
          <div class="breadcrumb-item">
            <span class="breadcrumb-label">Capítulo</span>
            <span class="breadcrumb-current">{capituloName}</span>
          </div>
        </div>
      </nav>

      <!-- Lista de Temas -->
      <section class="temas-section">
        <div class="temas-grid">
          {Object.entries(temas).map(([tema, lecciones], temaIndex) => {
            const leccionesCount = lecciones.length;
            
            return (
              <a 
                href={`/${materia}/${capitulo}/${tema}`}
                class="tema-card-link" 
                style={`--delay: ${temaIndex * 0.1}s; --accent: ${config.color}`}
              >
                <div class="tema-card-inner">
                  <div class="tema-indicator" style={`background: ${config.gradient}`}></div>
                  <div class="tema-info">
                    <span class="tema-label">Tema {temaIndex + 1}</span>
                    <h3 class="tema-name">{getMetaName(tema)}</h3>
                    <span class="tema-stats">{leccionesCount} {leccionesCount === 1 ? 'lección' : 'lecciones'}</span>
                  </div>
                  <div class="tema-arrow">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                  </div>
                </div>
              </a>
            );
          })}
        </div>
      </section>
    </main>
  </div>
  
  <Footer variant="minimal" />
</BaseLayout>

<style>
  @import '../../../styles/pages/capitulo.css';
</style>
