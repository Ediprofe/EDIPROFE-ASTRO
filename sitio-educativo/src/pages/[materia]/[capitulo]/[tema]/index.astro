  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @media (max-width: 768px) {
    .main-content {
      padding: 1rem;
    }

    .page-header {
      padding: 1.5rem;
    }

    .header-main {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .header-icon-wrapper {
      width: 48px;
      height: 48px;
    }

    .header-icon {
      font-size: 1.5rem;
    }

    .header-title {
      font-size: 1.5rem;
    }
  }
</style>
