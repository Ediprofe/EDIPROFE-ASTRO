    border-color: rgba(255,255,255,0.08);
  }

  .breadcrumb-inner {
    display: flex;
    align-items: flex-end;
    gap: 0.625rem;
    flex-wrap: wrap;
  }

  .breadcrumb-item {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .breadcrumb-label {
    font-size: 0.625rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-muted, #94a3b8);
  }

  .breadcrumb-link-pill {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
