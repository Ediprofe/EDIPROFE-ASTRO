---
import BaseLayout from '../../../../layouts/BaseLayout.astro';
import Footer from '../../../../components/Layout/Footer.astro';
import { formatName, formatBlockName, extractTitleFromContent } from '../../../../utils/navigation-generator.js';
import { getMetaName as getMetaNameFromStore } from '../../../../utils/load-meta';
import CollapsibleSidebar from '../../../../components/Navigation/CollapsibleSidebar.astro';
import MobileMenu from '../../../../components/Navigation/MobileMenu.astro';
import { 
  getLessonsByMateria, 
  filterLessonsByPath,
  getUniqueCapitulos,
  getUniqueTemas
} from '../../../../utils/content-helpers';
import { MATERIA_SLUGS, type MateriaSlug, type Lesson } from '../../../../types/content';
import { materiaConfig } from '../../../../config/materias';

export async function getStaticPaths() {
  const paths: Array<{ 
    params: { materia: string; capitulo: string; tema: string }; 
    props: { materia: MateriaSlug; capitulo: string; tema: string } 
  }> = [];
  
  for (const materia of MATERIA_SLUGS) {
    const lessons = await getLessonsByMateria(materia);
    const temasSet = new Set<string>();
    
    for (const lesson of lessons) {
      const parts = lesson.slug.split('/');
      if (parts[0] && parts[1]) {
        temasSet.add(`${parts[0]}/${parts[1]}`);
      }
    }
    
    for (const temaPath of temasSet) {
      const [capitulo, tema] = temaPath.split('/');
      if (capitulo && tema) {
        paths.push({
          params: { materia, capitulo, tema },
          props: { materia, capitulo, tema }
        });
      }
    }
  }
  
  return paths;
}

interface Props {
  materia: MateriaSlug;
  capitulo: string;
  tema: string;
}

const { materia, capitulo, tema } = Astro.props;
const config = materiaConfig[materia] ?? materiaConfig.fisica;

// Obtener lecciones de este tema (tipado)
const allLessons = await getLessonsByMateria(materia);
const lecciones = filterLessonsByPath(allLessons, `${capitulo}/${tema}/`)
  .sort((a, b) => a.slug.localeCompare(b.slug));

// Obtener nombres desde metadatos
const materiaName = formatName(materia);
const capituloKey = `${materia}/${capitulo}`;
const temaKey = `${materia}/${capitulo}/${tema}`;
const capituloName = getMetaNameFromStore(capituloKey, formatName(capitulo));
const temaName = getMetaNameFromStore(temaKey, formatBlockName(tema));

// Calcular índices
const allCapitulos = getUniqueCapitulos(allLessons);
const capituloIndex = allCapitulos.indexOf(capitulo);

const temasDelCapitulo = getUniqueTemas(allLessons, capitulo);
const temaIndex = temasDelCapitulo.indexOf(tema);
---

<BaseLayout title={`${temaName} - ${capituloName} - ${materiaName}`}>
  <MobileMenu currentPath={Astro.url.pathname} />
  
  <div class="page-container">
    <CollapsibleSidebar currentPath={Astro.url.pathname} />
    
    <main class="main-content">
      <!-- Header -->
      <header class="page-header" style={`--accent: ${config.color}`}>
        <div class="header-content">
          <div class="header-top">
            <a href={`/${materia}/${capitulo}`} class="back-link">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 12H5M12 19l-7-7 7-7"/>
              </svg>
              <span>Volver a {capituloName}</span>
            </a>
          </div>
          
          <div class="header-main">
            <div class="header-icon-wrapper" style={`background: ${config.gradient}`}>
              <span class="header-icon">{config.icon}</span>
            </div>
            <div class="header-text">
              <span class="header-label">Tema {temaIndex + 1}</span>
              <h1 class="header-title">{temaName}</h1>
              <p class="header-desc">{lecciones.length} {lecciones.length === 1 ? 'lección' : 'lecciones'}</p>
            </div>
          </div>
        </div>
      </header>

      <!-- Breadcrumb -->
      <nav class="breadcrumb">
        <div class="breadcrumb-inner">
          <div class="breadcrumb-item">
            <span class="breadcrumb-label">Materia</span>
            <a href={`/${materia}`} class="breadcrumb-link-pill" style={`--accent: ${config.color}`}>
              <span class="breadcrumb-icon">{config.icon}</span>
              <span>{materiaName}</span>
            </a>
          </div>
          <span class="breadcrumb-sep">›</span>
          <div class="breadcrumb-item">
            <span class="breadcrumb-label">Capítulo</span>
            <a href={`/${materia}/${capitulo}`} class="breadcrumb-link">{capituloName}</a>
          </div>
          <span class="breadcrumb-sep">›</span>
          <div class="breadcrumb-item">
            <span class="breadcrumb-label">Tema</span>
            <span class="breadcrumb-current">{temaName}</span>
          </div>
        </div>
      </nav>

      <!-- Lista de Lecciones -->
      <section class="lecciones-section">
        <div class="lecciones-grid">
          {lecciones.map((leccion, leccionIndex) => {
            const title = leccion.data?.title || extractTitleFromContent(leccion.body || '');
            
            return (
              <a 
                href={`/${materia}/${leccion.slug}`}
                class="leccion-card-link" 
                style={`--delay: ${leccionIndex * 0.08}s; --accent: ${config.color}`}
              >
                <div class="leccion-card-inner">
                  <div class="leccion-number" style={`background: ${config.gradient}`}>
                    <span>{leccionIndex + 1}</span>
                  </div>
                  <div class="leccion-info">
                    <span class="leccion-label">Lección {leccionIndex + 1}</span>
                    <h3 class="leccion-name">{title}</h3>
                  </div>
                  <div class="leccion-arrow">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                  </div>
                </div>
              </a>
            );
          })}
        </div>
      </section>
    </main>
  </div>
  
  <Footer variant="minimal" />
</BaseLayout>

<style>
  @import '../../../../styles/pages/tema.css';
</style>
