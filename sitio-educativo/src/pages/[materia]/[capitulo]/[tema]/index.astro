---
import { getCollection } from 'astro:content';
import BaseLayout from '../../../../layouts/BaseLayout.astro';
import { formatName, formatBlockName, extractTitleFromContent } from '../../../../utils/navigation-generator.js';
import { allMeta } from '../../../../utils/load-meta.js';
import ThemeToggle from '../../../../components/UI/ThemeToggle.astro';
import CollapsibleSidebar from '../../../../components/Navigation/CollapsibleSidebar.astro';
import MobileMenu from '../../../../components/Navigation/MobileMenu.astro';

// Configuraci√≥n de materias (consistente con sidebar)
const materiaConfig: Record<string, { icon: string; color: string; gradient: string }> = {
  matematicas: { icon: 'üßÆ', color: '#ef4444', gradient: 'linear-gradient(135deg, #ef4444, #dc2626)' },
  fisica: { icon: 'üöÄ', color: '#3b82f6', gradient: 'linear-gradient(135deg, #3b82f6, #2563eb)' },
  quimica: { icon: '‚öõÔ∏è', color: '#a855f7', gradient: 'linear-gradient(135deg, #a855f7, #9333ea)' },
  ciencias: { icon: 'üåç', color: '#22c55e', gradient: 'linear-gradient(135deg, #22c55e, #16a34a)' }
};

export async function getStaticPaths() {
  const paths: any[] = [];
  const collections = ['matematicas', 'fisica', 'quimica', 'ciencias'];
  
  for (const materia of collections) {
    try {
      const lessons = await getCollection(materia as any);
      const temasSet = new Set<string>();
      
      lessons.forEach(lesson => {
        const parts = lesson.slug.split('/');
        if (parts[0] && parts[1]) {
          temasSet.add(`${parts[0]}/${parts[1]}`);
        }
      });
      
      temasSet.forEach(temaPath => {
        const [capitulo, tema] = temaPath.split('/');
        paths.push({
          params: { materia, capitulo, tema },
          props: { materia, capitulo, tema }
        });
      });
    } catch (e) {}
  }
  
  return paths;
}

const { materia, capitulo, tema } = Astro.props;
const config = materiaConfig[materia] || materiaConfig.fisica;

// Obtener lecciones de este tema
let lecciones: any[] = [];
try {
  const allLessons = await getCollection(materia as any);
  lecciones = allLessons
    .filter(l => l.slug.startsWith(`${capitulo}/${tema}/`))
    .sort((a, b) => a.slug.localeCompare(b.slug));
} catch (e) {}

// Obtener nombres desde metadatos
const materiaName = formatName(materia);
const capituloKey = `${materia}/${capitulo}`;
const temaKey = `${materia}/${capitulo}/${tema}`;
const capituloName = (allMeta as any)[capituloKey]?.name || formatName(capitulo);
const temaName = (allMeta as any)[temaKey]?.name || formatBlockName(tema);

// Calcular √≠ndices
let capituloIndex = 0;
let temaIndex = 0;
try {
  const allLessons = await getCollection(materia as any);
  const allCapitulos = [...new Set(allLessons.map(l => l.slug.split('/')[0]))].sort();
  capituloIndex = allCapitulos.indexOf(capitulo);
  
  const temasDelCapitulo = [...new Set(
    allLessons
      .filter(l => l.slug.startsWith(`${capitulo}/`))
      .map(l => l.slug.split('/')[1])
  )].sort();
  temaIndex = temasDelCapitulo.indexOf(tema);
} catch (e) {}
---

<BaseLayout title={`${temaName} - ${capituloName} - ${materiaName}`}>
  <MobileMenu currentPath={Astro.url.pathname} />
  
  <div class="page-container">
    <CollapsibleSidebar currentPath={Astro.url.pathname} />
    
    <main class="main-content">
      <!-- Header -->
      <header class="page-header" style={`--accent: ${config.color}`}>
        <div class="header-content">
          <div class="header-top">
            <a href={`/${materia}/${capitulo}`} class="back-link">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 12H5M12 19l-7-7 7-7"/>
              </svg>
              <span>Volver a {capituloName}</span>
            </a>
          </div>
          
          <div class="header-main">
            <div class="header-icon-wrapper" style={`background: ${config.gradient}`}>
              <span class="header-icon">{config.icon}</span>
            </div>
            <div class="header-text">
              <span class="header-label">Tema {temaIndex + 1}</span>
              <h1 class="header-title">{temaName}</h1>
              <p class="header-desc">{lecciones.length} {lecciones.length === 1 ? 'lecci√≥n' : 'lecciones'}</p>
            </div>
          </div>
        </div>
      </header>

      <!-- Breadcrumb -->
      <nav class="breadcrumb">
        <div class="breadcrumb-inner">
          <div class="breadcrumb-item">
            <span class="breadcrumb-label">Materia</span>
            <a href={`/${materia}`} class="breadcrumb-link-pill" style={`--accent: ${config.color}`}>
              <span class="breadcrumb-icon">{config.icon}</span>
              <span>{materiaName}</span>
            </a>
          </div>
          <span class="breadcrumb-sep">‚Ä∫</span>
          <div class="breadcrumb-item">
            <span class="breadcrumb-label">Cap√≠tulo</span>
            <a href={`/${materia}/${capitulo}`} class="breadcrumb-link">{capituloName}</a>
          </div>
          <span class="breadcrumb-sep">‚Ä∫</span>
          <div class="breadcrumb-item">
            <span class="breadcrumb-label">Tema</span>
            <span class="breadcrumb-current">{temaName}</span>
          </div>
        </div>
      </nav>

      <!-- Lista de Lecciones -->
      <section class="lecciones-section">
        <div class="lecciones-grid">
          {lecciones.map((leccion, leccionIndex) => {
            const title = leccion.data?.title || extractTitleFromContent(leccion.body || '');
            
            return (
              <a 
                href={`/${materia}/${leccion.slug}`}
                class="leccion-card-link" 
                style={`--delay: ${leccionIndex * 0.08}s; --accent: ${config.color}`}
              >
                <div class="leccion-card-inner">
                  <div class="leccion-number" style={`background: ${config.gradient}`}>
                    <span>{leccionIndex + 1}</span>
                  </div>
                  <div class="leccion-info">
                    <span class="leccion-label">Lecci√≥n {leccionIndex + 1}</span>
                    <h3 class="leccion-name">{title}</h3>
                  </div>
                  <div class="leccion-arrow">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                  </div>
                </div>
              </a>
            );
          })}
        </div>
      </section>
    </main>
  </div>
  
  <ThemeToggle />
</BaseLayout>

<style>
  .page-container {
    display: flex;
    min-height: 100vh;
  }

  .main-content {
    flex: 1;
    padding: 2rem;
    max-width: 900px;
    margin: 0 auto;
  }

  /* Header */
  .page-header {
    background: var(--bg-secondary);
    border-radius: 20px;
    padding: 2rem;
    margin-bottom: 1.5rem;
    border: 1px solid var(--border-color, rgba(0,0,0,0.06));
  }

  :global(html.dark) .page-header {
    background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
    border-color: rgba(255,255,255,0.06);
  }

  .header-top {
    margin-bottom: 1.5rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    padding: 0.5rem 0.75rem;
    border-radius: 8px;
    transition: all 0.2s;
  }

  .back-link:hover {
    background: var(--bg-primary);
    color: var(--accent);
    text-decoration: none;
  }

  .header-main {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .header-icon-wrapper {
    width: 64px;
    height: 64px;
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .header-icon {
    font-size: 1.75rem;
  }

  .header-label {
    display: block;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--accent);
    margin-bottom: 0.25rem;
  }

  .header-title {
    font-size: 1.75rem;
    font-weight: 800;
    color: var(--text-primary);
    margin: 0 0 0.375rem 0;
    line-height: 1.2;
  }

  .header-desc {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    margin: 0;
  }

  /* Breadcrumb */
  .breadcrumb {
    margin-bottom: 1.5rem;
    padding: 0.75rem 1rem;
    background: var(--bg-secondary);
    border-radius: 12px;
    border: 1px solid var(--border-color, rgba(0,0,0,0.06));
  }

