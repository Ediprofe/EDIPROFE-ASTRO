  }

  .breadcrumb-link {
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--color-primary, #3b82f6);
    text-decoration: none;
    padding: 0.25rem 0.5rem;
    border-radius: 6px;
    transition: background 0.2s;
  }

  .breadcrumb-link:hover {
