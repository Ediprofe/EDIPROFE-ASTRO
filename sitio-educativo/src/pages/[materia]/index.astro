<BaseLayout title={materiaName}>
  <MobileMenu currentPath={`/${materia}`} />
  
  <div class="page-container">
    <CollapsibleSidebar currentPath={`/${materia}`} />
    
    <main class="main-content">
      <!-- Header Premium -->
      <header class={`page-header page-header-${materia}`}>
        <div class="header-bg">
          <div class="header-orb header-orb-1"></div>
          <div class="header-orb header-orb-2"></div>
          <div class="header-grid"></div>
        </div>
        
        <div class="header-content">
