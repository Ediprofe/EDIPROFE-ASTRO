              {lessons.slice(0, 12).map((lesson: any, index: number) => (
                <LessonCard
                  title={lesson.data?.title || 'Sin t칤tulo'}
                  description={lesson.data?.description}
                  href={`/${materia}/${lesson.slug}`}
                  materia={materia}
                  order={index + 1}
                />
              ))}
            </div>
          </section>
        </div>
      ) : (
        <div class="empty-state">
          <div class="empty-icon-wrapper" style={`background: ${config.lightBg}`}>
            <span class="empty-icon">{icon}</span>
          </div>
          <h2>Sin contenido a칰n</h2>
          <p>No hay lecciones disponibles en {materiaName}.</p>
          <div class="empty-hint">
            <p>Para agregar contenido, crea archivos en:</p>
