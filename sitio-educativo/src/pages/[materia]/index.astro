---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Layout/Header.astro';
import Footer from '../../components/Layout/Footer.astro';
import LessonCard from '../../components/Content/LessonCard.astro';
import MobileMenu from '../../components/Navigation/MobileMenu.astro';
import CollapsibleSidebar from '../../components/Navigation/CollapsibleSidebar.astro';
import { getCollection } from 'astro:content';
import { formatName, formatBlockName } from '../../utils/navigation-generator.js';
import { allMeta } from '../../utils/load-meta.js';
import { materiaConfig as baseMateriaConfig, getMateriaConfig, MATERIAS_SLUGS } from '../../config/materias';

export async function getStaticPaths() {
  const materias = ['matematicas', 'fisica', 'quimica', 'ciencias'];
  return materias.map(materia => ({
    params: { materia },
    props: { materia }
  }));
}

interface Props {
  materia: string;
}

const { materia } = Astro.props;

// Obtener lecciones de esta materia
let lessons: any[] = [];
try {
  lessons = await getCollection(materia as any);
} catch (e) {
  // Colecci칩n vac칤a o no existe
}

const materiaName = formatName(materia);

// Helper para obtener nombre de unidad/bloque desde metadatos
const getMetaName = (unidadSlug: string, bloqueSlug?: string) => {
  const key = bloqueSlug 
    ? `${materia}/${unidadSlug}/${bloqueSlug}`
    : `${materia}/${unidadSlug}`;
  return allMeta[key]?.name || (bloqueSlug ? formatBlockName(bloqueSlug) : formatName(unidadSlug));
};

const materiaConfig: Record<string, { icon: string; color: string; gradient: string; lightBg: string; sidebarIcon: string; sidebarColor: string }> = {
  matematicas: { 
    icon: '游빑', 
    color: '#ef4444',
    gradient: 'linear-gradient(135deg, #ef4444, #dc2626)',
    lightBg: 'rgba(239, 68, 68, 0.1)',
    sidebarIcon: '游닇',
    sidebarColor: '#dc2626'
  },
  fisica: { 
    icon: '游', 
    color: '#3b82f6',
    gradient: 'linear-gradient(135deg, #3b82f6, #2563eb)',
    lightBg: 'rgba(59, 130, 246, 0.1)',
    sidebarIcon: '丘뫮잺',
    sidebarColor: '#2563eb'
  },
  quimica: { 
    icon: '丘勇', 
    color: '#a855f7',
    gradient: 'linear-gradient(135deg, #a855f7, #9333ea)',
    lightBg: 'rgba(168, 85, 247, 0.1)',
    sidebarIcon: '丘勇',
    sidebarColor: '#9333ea'
  },
  ciencias: { 
    icon: '游깴', 
    color: '#22c55e',
    gradient: 'linear-gradient(135deg, #22c55e, #16a34a)',
    lightBg: 'rgba(34, 197, 94, 0.1)',
    sidebarIcon: '游',
    sidebarColor: '#16a34a'
  },
};

const config = materiaConfig[materia] || materiaConfig.fisica;
const icon = config.icon;

// Agrupar por unidad y bloque
const grouped: Record<string, Record<string, any[]>> = {};

lessons.forEach(lesson => {
  const parts = lesson.slug.split('/');
  const unidad = parts[0] || 'general';
  const bloque = parts[1] || 'general';
  
  if (!grouped[unidad]) grouped[unidad] = {};
  if (!grouped[unidad][bloque]) grouped[unidad][bloque] = [];
  
  grouped[unidad][bloque].push(lesson);
});
---

<BaseLayout title={materiaName}>
  <MobileMenu currentPath={`/${materia}`} />
  
  <div class="page-container">
    <CollapsibleSidebar currentPath={`/${materia}`} />
    
    <main class="main-content">
      <!-- Header Premium -->
      <header class={`page-header page-header-${materia}`}>
        <div class="header-bg">
          <div class="header-orb header-orb-1"></div>
          <div class="header-orb header-orb-2"></div>
          <div class="header-grid"></div>
        </div>
        
        <div class="header-content">
          <div class="header-top">
            <a href="/" class="back-link">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M19 12H5M12 19l-7-7 7-7"/>
              </svg>
              <span>Volver al inicio</span>
            </a>
            <div class="header-badge">
              <span class="badge-dot" style={`background: ${config.color}`}></span>
              <span>{lessons.length} {lessons.length === 1 ? 'tema' : 'temas'}</span>
            </div>
          </div>
          
          <div class="header-main">
            <div class="header-icon-wrapper" style={`background: ${config.gradient}`}>
              <span class="header-icon">{icon}</span>
            </div>
            <div class="header-text">
              <h1 class="header-title">{materiaName}</h1>
              <p class="header-desc">
                {materia === 'matematicas' && 'Explora 치lgebra, geometr칤a, c치lculo y m치s conceptos matem치ticos'}
                {materia === 'fisica' && 'Descubre mec치nica, ondas, termodin치mica y fen칩menos f칤sicos'}
                {materia === 'quimica' && 'Aprende qu칤mica general, org치nica y reacciones qu칤micas'}
                {materia === 'ciencias' && 'Estudia biolog칤a, ecolog칤a y ciencias naturales'}
              </p>
            </div>
          </div>
          
          <div class="header-stats">
            <div class="stat-card">
              <span class="stat-icon">游닄</span>
              <div class="stat-info">
                <span class="stat-value">{Object.keys(grouped).length}</span>
                <span class="stat-label">{Object.keys(grouped).length === 1 ? 'Cap칤tulo' : 'Cap칤tulos'}</span>
              </div>
            </div>
          </div>
        </div>
      </header>

      {lessons.length > 0 ? (
        <div class="content-sections">
          <!-- CAP칈TULOS -->
          <section class="capitulos-section">
            <div class="capitulos-grid">
              {Object.entries(grouped).map(([capitulo, temas], capituloIndex) => {
                const temasCount = Object.keys(temas).length;
                const leccionesCount = Object.values(temas).reduce((acc: number, t: any) => acc + t.length, 0);
                const firstTema = Object.values(temas)[0] as any[];
                const firstLesson = firstTema?.[0];
                
                return (
                  <a 
                    href={`/${materia}/${capitulo}`} 
                    id={`capitulo-${capitulo}`} 
                    class="capitulo-card-link" 
                    style={`--delay: ${capituloIndex * 0.1}s; --accent: ${config.color}`}
                  >
                    <div class="capitulo-card-inner">
                      <div class="capitulo-number" style={`background: ${config.gradient}`}>
                        <span>{capituloIndex + 1}</span>
                      </div>
                      <div class="capitulo-info">
                        <span class="capitulo-label">Cap칤tulo {capituloIndex + 1}</span>
                        <h3 class="capitulo-name">{getMetaName(capitulo)}</h3>
                        <div class="capitulo-stats">
                          <span class="capitulo-stat">{temasCount} {temasCount === 1 ? 'tema' : 'temas'}</span>
                        </div>
                      </div>
                      <div class="capitulo-arrow">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <path d="M5 12h14M12 5l7 7-7 7"/>
                        </svg>
                      </div>
                    </div>
                    
                    <!-- Preview de temas -->
                    <div class="capitulo-temas-preview">
                      {Object.entries(temas).slice(0, 3).map(([tema, lecciones]: [string, any[]]) => (
                        <span class="tema-preview-tag">{getMetaName(capitulo, tema)}</span>
                      ))}
                      {temasCount > 3 && (
                        <span class="tema-preview-more">+{temasCount - 3} m치s</span>
                      )}
                    </div>
                  </a>
                );
              })}
            </div>
          </section>
        </div>
      ) : (
        <div class="empty-state">
          <div class="empty-icon-wrapper" style={`background: ${config.lightBg}`}>
            <span class="empty-icon">{icon}</span>
          </div>
          <h2>Sin contenido a칰n</h2>
          <p>No hay temas disponibles en {materiaName}.</p>
          <div class="empty-hint">
            <p>Para agregar contenido, crea archivos en:</p>
            <code>src/content/{materia}/</code>
          </div>
        </div>
      )}
    </main>
  </div>
  
  <Footer variant="minimal" />
</BaseLayout>

<style>
  @import '../../styles/pages/materia.css';
</style>
