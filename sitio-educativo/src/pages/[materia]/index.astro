import BaseLayout from '../../layouts/BaseLayout.astro';
import LessonCard from '../../components/Content/LessonCard.astro';
import ThemeToggle from '../../components/UI/ThemeToggle.astro';
import MobileMenu from '../../components/Navigation/MobileMenu.astro';
import CollapsibleSidebar from '../../components/Navigation/CollapsibleSidebar.astro';
import { getCollection } from 'astro:content';
import { formatName, formatBlockName } from '../../utils/navigation-generator.js';
import { allMeta } from '../../utils/load-meta.js';

export async function getStaticPaths() {
  const materias = ['matematicas', 'fisica', 'quimica', 'ciencias'];
  return materias.map(materia => ({
    params: { materia },
    props: { materia }
  }));
}

interface Props {
  materia: string;
}

const { materia } = Astro.props;

// Obtener lecciones de esta materia
let lessons: any[] = [];
try {
  lessons = await getCollection(materia as any);
} catch (e) {
  // Colecci칩n vac칤a o no existe
}

const materiaName = formatName(materia);

// Helper para obtener nombre de unidad/bloque desde metadatos
const getMetaName = (unidadSlug: string, bloqueSlug?: string) => {
  const key = bloqueSlug 
    ? `${materia}/${unidadSlug}/${bloqueSlug}`
    : `${materia}/${unidadSlug}`;
  return allMeta[key]?.name || (bloqueSlug ? formatBlockName(bloqueSlug) : formatName(unidadSlug));
};

const materiaConfig: Record<string, { icon: string; color: string; gradient: string; lightBg: string; sidebarIcon: string; sidebarColor: string }> = {
  matematicas: { 
    icon: '游빑', 
    color: '#ef4444',
    gradient: 'linear-gradient(135deg, #ef4444, #dc2626)',
    lightBg: 'rgba(239, 68, 68, 0.1)',
    sidebarIcon: '游닇',
    sidebarColor: '#dc2626'
  },
  fisica: { 
    icon: '游', 
    color: '#3b82f6',
    gradient: 'linear-gradient(135deg, #3b82f6, #2563eb)',
    lightBg: 'rgba(59, 130, 246, 0.1)',
    sidebarIcon: '丘뫮잺',
    sidebarColor: '#2563eb'
  },
  quimica: { 
    icon: '丘勇', 
    color: '#a855f7',
    gradient: 'linear-gradient(135deg, #a855f7, #9333ea)',
    lightBg: 'rgba(168, 85, 247, 0.1)',
    sidebarIcon: '丘勇',
    sidebarColor: '#9333ea'
  },
  ciencias: { 
    icon: '游깴', 
    color: '#22c55e',
    gradient: 'linear-gradient(135deg, #22c55e, #16a34a)',
    lightBg: 'rgba(34, 197, 94, 0.1)',
    sidebarIcon: '游',
    sidebarColor: '#16a34a'
  },
};

const config = materiaConfig[materia] || materiaConfig.fisica;
const icon = config.icon;

// Agrupar por unidad y bloque
const grouped: Record<string, Record<string, any[]>> = {};

lessons.forEach(lesson => {
  const parts = lesson.slug.split('/');
  const unidad = parts[0] || 'general';
  const bloque = parts[1] || 'general';
  
  if (!grouped[unidad]) grouped[unidad] = {};
  if (!grouped[unidad][bloque]) grouped[unidad][bloque] = [];
  
  grouped[unidad][bloque].push(lesson);
});
