          <!-- SECCI칍N DE BLOQUES -->
          <section class="bloques-section">
            <div class="section-header-inline">
              <h2 class="section-title-inline">Contenido por Bloques</h2>
              <p class="section-desc-inline">Explora el contenido organizado por temas</p>
            </div>
            
            <div class="bloques-overview">
              {Object.entries(grouped).map(([unidad, bloques], unidadIndex) => (
                <div class="unidad-card" style={`--delay: ${unidadIndex * 0.1}s`}>
                  <div class="unidad-card-header">
                    <div class="unidad-number" style={`background: ${config.gradient}`}>
                      {unidadIndex + 1}
                    </div>
                    <div class="unidad-card-info">
                      <span class="unidad-label">Unidad {unidadIndex + 1}</span>
                      <h3 class="unidad-card-title">{formatName(unidad)}</h3>
                    </div>
                  </div>
                  
                  <div class="bloques-grid">
                    {Object.entries(bloques).map(([bloque, lecciones]: [string, any[]], bloqueIndex) => {
                      const firstLesson = lecciones[0];
                      return (
                        <a href={`/${materia}/${firstLesson.slug}`} class="bloque-card" style={`--accent: ${config.color}`}>
                          <div class="bloque-card-indicator" style={`background: ${config.gradient}`}></div>
                          <div class="bloque-card-content">
                            <h4 class="bloque-card-title">{formatName(bloque)}</h4>
                            <span class="bloque-card-count">{lecciones.length} {lecciones.length === 1 ? 'lecci칩n' : 'lecciones'}</span>
                          </div>
                          <div class="bloque-card-arrow">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
