---
interface Props {
  title: string;
  description?: string;
  href: string;
  materia?: string;
  order?: number;
}

const { title, description, href, materia, order } = Astro.props;

const materiaIcons: Record<string, string> = {
  matematicas: 'üìê',
  fisica: '‚öõÔ∏è',
  quimica: 'üß™',
  default: 'üìö'
};

const icon = materia ? (materiaIcons[materia] || materiaIcons.default) : materiaIcons.default;
---

<a href={href} class="lesson-card">
  <div class="card-icon">{icon}</div>
  <div class="card-content">
    {order && <span class="card-order">Lecci√≥n {order}</span>}
    <h3 class="card-title">{title}</h3>
    {description && <p class="card-description">{description}</p>}
  </div>
  <div class="card-arrow">‚Üí</div>
</a>

<style>
  .lesson-card {
    display: flex;
    align-items: center;
    gap: 0.875rem;
    padding: 1rem 1.25rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border-color, #e2e8f0);
    border-radius: 10px;
    text-decoration: none;
    color: var(--text-primary);
    transition: all 0.2s;
  }

  :global(html.dark) .lesson-card {
    border-color: #334155;
  }

  .lesson-card:hover {
    border-color: var(--color-primary);
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.1);
    transform: translateY(-2px);
    text-decoration: none;
  }

  .card-icon {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(37, 99, 235, 0.1), rgba(59, 130, 246, 0.05));
    border-radius: 8px;
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  .card-content {
    flex: 1;
    min-width: 0;
  }

  .card-order {
    display: inline-block;
    font-size: 0.6875rem;
    font-weight: 600;
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.125rem;
  }

  .card-title {
    font-size: 0.9375rem;
    font-weight: 600;
    margin: 0;
    color: var(--text-primary);
    line-height: 1.3;
  }

  .card-description {
    font-size: 0.8125rem;
    color: var(--text-secondary);
    margin: 0.375rem 0 0 0;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-arrow {
    font-size: 1rem;
    color: var(--color-primary);
    opacity: 0;
    transform: translateX(-6px);
    transition: all 0.2s;
  }

  .lesson-card:hover .card-arrow {
    opacity: 1;
    transform: translateX(0);
  }

  @media (max-width: 640px) {
    .lesson-card {
      padding: 0.875rem 1rem;
    }

    .card-icon {
      width: 36px;
      height: 36px;
      font-size: 1.125rem;
    }

    .card-title {
      font-size: 0.875rem;
    }

    .card-description {
      font-size: 0.75rem;
    }
  }
</style>
