---
interface Props {
  headings: Array<{ depth: number; slug: string; text: string }>;
}

const { headings } = Astro.props;

// Filtrar solo h2 y h3
const tocHeadings = headings.filter(h => h.depth >= 2 && h.depth <= 3);
---

{tocHeadings.length > 0 && (
  <nav class="toc" aria-label="Tabla de contenidos">
    <details open>
      <summary class="toc-title">
        <span class="toc-icon">ðŸ“‘</span>
        Contenido
      </summary>
      
      <ul class="toc-list">
        {tocHeadings.map(heading => (
          <li class:list={['toc-item', `depth-${heading.depth}`]}>
            <a href={`#${heading.slug}`} class="toc-link">
              {heading.text}
            </a>
          </li>
        ))}
      </ul>
    </details>
  </nav>
)}

<style>
  .toc {
    background: var(--bg-primary);
    border: 1px solid var(--border-color, #e2e8f0);
    border-radius: 8px;
    padding: 1rem;
    margin-bottom: 2rem;
  }

  :global(html.dark) .toc {
    background: #1e293b;
    border-color: #334155;
  }

  .toc-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    color: var(--text-primary);
    cursor: pointer;
    list-style: none;
  }

  .toc-title::-webkit-details-marker {
    display: none;
  }

  .toc-title::after {
    content: 'â–¼';
    font-size: 0.75rem;
    margin-left: auto;
    transition: transform 0.2s;
  }

  details:not([open]) .toc-title::after {
    transform: rotate(-90deg);
  }

  .toc-icon {
    font-size: 1rem;
  }

  .toc-list {
    list-style: none;
    margin: 1rem 0 0 0;
    padding: 0;
  }

  .toc-item {
    margin-bottom: 0.25rem;
  }

  .toc-item.depth-3 {
    margin-left: 1rem;
  }

  .toc-link {
    display: block;
    padding: 0.35rem 0.75rem;
    font-size: 0.875rem;
    color: var(--text-secondary);
    text-decoration: none;
    border-radius: 4px;
    border-left: 2px solid transparent;
    transition: all 0.2s;
  }

  .toc-link:hover {
    background: rgba(37, 99, 235, 0.1);
    color: var(--color-primary);
    border-left-color: var(--color-primary);
    text-decoration: none;
  }

  .depth-2 .toc-link {
    font-weight: 500;
  }

  .depth-3 .toc-link {
    font-size: 0.8rem;
  }

  @media (max-width: 640px) {
    .toc {
      padding: 0.75rem;
    }

    .toc-link {
      padding: 0.3rem 0.5rem;
      font-size: 0.8rem;
    }
  }
</style>
