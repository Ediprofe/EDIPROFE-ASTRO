---
import { getCollection } from 'astro:content';
import { buildNavigationFromLessonsWithCollection, mergeNavigations } from '../../utils/navigation-generator.js';

interface Props {
  currentPath: string;
}

const { currentPath } = Astro.props;

// Obtener navegaci√≥n de cada colecci√≥n
let navigation: any = {};

try {
  const matematicas = await getCollection('matematicas');
  const navMat = buildNavigationFromLessonsWithCollection(matematicas, 'matematicas');
  navigation = mergeNavigations(navigation, navMat);
} catch (e) {}

try {
  const fisica = await getCollection('fisica');
  const navFis = buildNavigationFromLessonsWithCollection(fisica, 'fisica');
  navigation = mergeNavigations(navigation, navFis);
} catch (e) {}

try {
  const quimica = await getCollection('quimica');
  const navQui = buildNavigationFromLessonsWithCollection(quimica, 'quimica');
  navigation = mergeNavigations(navigation, navQui);
} catch (e) {}

try {
  const ciencias = await getCollection('ciencias');
  const navCie = buildNavigationFromLessonsWithCollection(ciencias, 'ciencias');
  navigation = mergeNavigations(navigation, navCie);
} catch (e) {}

// √çconos de materias
const materiaIcons: Record<string, string> = {
  matematicas: 'üßÆ',
  fisica: 'üöÄ',
  quimica: '‚öõÔ∏è',
  ciencias: 'üåç',
};
---

<div class="mobile-menu-container">
  <button class="mobile-menu-toggle" aria-label="Abrir men√∫" id="mobile-menu-toggle">
    <span class="hamburger-icon">
      <span></span>
      <span></span>
      <span></span>
    </span>
  </button>
  
  <div class="mobile-menu-overlay" id="mobile-menu-overlay"></div>
  
  <nav class="mobile-menu" id="mobile-menu" aria-hidden="true">
    <div class="mobile-menu-header">
      <a href="/" class="logo">
        <span class="logo-icon">üéì</span>
        <span class="logo-text">Ediprofe</span>
      </a>
      <button class="mobile-menu-close" aria-label="Cerrar men√∫" id="mobile-menu-close">
        ‚úï
      </button>
    </div>
    
    <div class="mobile-menu-content">
      {Object.entries(navigation).map(([materiaKey, materia]: [string, any]) => {
        const materiaIcon = materiaIcons[materiaKey] || 'üìñ';
        const isMateriaActive = currentPath.startsWith(`/${materiaKey}`);
        
        return (
          <details class="nav-details materia-details" open={isMateriaActive}>
            <summary class="nav-summary materia-summary">
              <span class="nav-icon">{materiaIcon}</span>
              <span class="nav-text">{materia.name}</span>
              <span class="nav-chevron">‚Ä∫</span>
            </summary>
            
            <div class="nav-children">
              {Object.entries(materia.unidades).map(([unidadKey, unidad]: [string, any]) => {
                const isUnidadActive = currentPath.includes(`/${unidadKey}`);
                
                return (
                  <details class="nav-details unidad-details" open={isUnidadActive}>
                    <summary class="nav-summary unidad-summary">
                      <span class="nav-text">{unidad.name}</span>
                      <span class="nav-chevron">‚Ä∫</span>
                    </summary>
                    
                    <div class="nav-children">
                      {Object.entries(unidad.bloques).map(([bloqueKey, bloque]: [string, any]) => {
                        const isBloqueActive = currentPath.includes(`/${bloqueKey}`);
                        
                        return (
                          <details class="nav-details bloque-details" open={isBloqueActive}>
                            <summary class="nav-summary bloque-summary">
                              <span class="nav-text">{bloque.name}</span>
                              <span class="nav-chevron">‚Ä∫</span>
                            </summary>
                            
                            <ul class="nav-lessons">
                              {bloque.lecciones.map((leccion: any) => {
                                const isActive = currentPath === `/${leccion.slug}` || currentPath.endsWith(leccion.slug);
                                return (
                                  <li>
                                    <a 
                                      href={`/${leccion.slug}`}
                                      class:list={['nav-lesson', { active: isActive }]}
                                    >
                                      {leccion.title}
                                    </a>
                                  </li>
                                );
                              })}
                            </ul>
                          </details>
                        );
                      })}
                    </div>
                  </details>
                );
              })}
            </div>
          </details>
        );
      })}
      
      {Object.keys(navigation).length === 0 && (
        <p class="mobile-nav-empty">No hay contenido disponible.</p>
      )}
    </div>
  </nav>
</div>

<script>
  const toggle = document.getElementById('mobile-menu-toggle');
  const menu = document.getElementById('mobile-menu');
  const overlay = document.getElementById('mobile-menu-overlay');
  const close = document.getElementById('mobile-menu-close');
  
  function openMenu() {
    menu?.classList.add('open');
    overlay?.classList.add('open');
    menu?.setAttribute('aria-hidden', 'false');
    document.body.style.overflow = 'hidden';
  }
  
  function closeMenu() {
    menu?.classList.remove('open');
    overlay?.classList.remove('open');
    menu?.setAttribute('aria-hidden', 'true');
    document.body.style.overflow = '';
  }
  
  toggle?.addEventListener('click', openMenu);
  close?.addEventListener('click', closeMenu);
  overlay?.addEventListener('click', closeMenu);
  
  // Cerrar con Escape
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') closeMenu();
  });
</script>

<style>
  .mobile-menu-container {
    display: none;
  }

  @media (max-width: 1024px) {
    .mobile-menu-container {
      display: block;
    }
  }

  .mobile-menu-toggle {
    position: fixed;
    top: 0.75rem;
    left: 0.75rem;
    z-index: 1000;
    width: 44px;
    height: 44px;
    background: linear-gradient(135deg, #1d4ed8, #2563eb);
    border: none;
    border-radius: 10px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 10px rgba(37, 99, 235, 0.3);
  }

  .hamburger-icon {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .hamburger-icon span {
    display: block;
    width: 20px;
    height: 2px;
    background: white;
    border-radius: 2px;
  }

  .mobile-menu-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.5);
    backdrop-filter: blur(2px);
    z-index: 1001;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s;
  }

  .mobile-menu-overlay.open {
    opacity: 1;
    visibility: visible;
  }

  .mobile-menu {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    width: 300px;
    max-width: 85vw;
    background: var(--bg-secondary);
    z-index: 1002;
    transform: translateX(-100%);
    transition: transform 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  :global(html.dark) .mobile-menu {
    background: #1e293b;
  }

  .mobile-menu.open {
    transform: translateX(0);
  }

  .mobile-menu-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.875rem 1rem;
    border-bottom: 1px solid var(--border-color, #e2e8f0);
    background: linear-gradient(135deg, #0f172a 0%, #1e3a5f 100%);
  }

  :global(html.dark) .mobile-menu-header {
    border-bottom-color: #334155;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: white;
  }

  .logo-icon {
    font-size: 1.25rem;
  }

  .logo-text {
    font-size: 1rem;
    font-weight: 700;
    background: linear-gradient(90deg, #fbbf24, #f59e0b);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .mobile-menu-close {
    width: 32px;
    height: 32px;
    background: rgba(255,255,255,0.1);
    border: 1px solid rgba(255,255,255,0.2);
    border-radius: 6px;
    cursor: pointer;
    font-size: 1rem;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .mobile-menu-content {
    flex: 1;
    overflow-y: auto;
    padding: 0.75rem;
  }

  /* Details/Summary styling */
  .nav-details {
    border-radius: 6px;
    margin-bottom: 0.25rem;
  }

  .nav-summary {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 0.75rem;
    cursor: pointer;
    border-radius: 6px;
    transition: all 0.15s;
    list-style: none;
  }

  .nav-summary::-webkit-details-marker {
    display: none;
  }

  .nav-summary:hover {
    background: rgba(37, 99, 235, 0.08);
  }

  .nav-icon {
    font-size: 1rem;
    flex-shrink: 0;
  }

  .nav-text {
    flex: 1;
    font-size: 0.8125rem;
    color: var(--text-primary);
  }

  .nav-chevron {
    font-size: 0.875rem;
    color: var(--text-secondary);
    transition: transform 0.2s;
    flex-shrink: 0;
  }

  .nav-details[open] > .nav-summary .nav-chevron {
    transform: rotate(90deg);
  }

  .nav-children {
    padding-left: 0.75rem;
    border-left: 1px solid var(--border-color, #e2e8f0);
    margin-left: 0.75rem;
    margin-top: 0.25rem;
  }

  :global(html.dark) .nav-children {
    border-left-color: #334155;
  }

  /* Materia level */
  .materia-summary {
    font-weight: 600;
  }

  .materia-summary .nav-text {
    color: var(--color-primary);
  }

  /* Unidad level */
  .unidad-summary .nav-text {
    font-size: 0.75rem;
    color: var(--text-secondary);
    font-weight: 500;
  }

  /* Bloque level */
  .bloque-summary .nav-text {
    font-size: 0.75rem;
    color: var(--text-secondary);
  }

  /* Lessons */
  .nav-lessons {
    list-style: none;
    margin: 0;
    padding: 0.25rem 0;
  }

  .nav-lessons li {
    margin: 0;
  }

  .nav-lesson {
    display: block;
    padding: 0.5rem 0.75rem;
    font-size: 0.8125rem;
    color: var(--text-primary);
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.15s;
    line-height: 1.3;
  }

  .nav-lesson:hover {
    background: rgba(37, 99, 235, 0.08);
    color: var(--color-primary);
    text-decoration: none;
  }

  .nav-lesson.active {
    background: rgba(37, 99, 235, 0.12);
    color: var(--color-primary);
    font-weight: 500;
  }

  .mobile-nav-empty {
    text-align: center;
    color: var(--text-secondary);
    padding: 2rem;
    font-size: 0.875rem;
  }
</style>
