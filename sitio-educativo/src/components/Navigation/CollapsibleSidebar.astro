---
import { getCollection } from 'astro:content';
import { buildNavigationFromLessonsWithCollection, mergeNavigations, formatName } from '../../utils/navigation-generator.js';

interface Props {
  currentPath: string;
}

const { currentPath } = Astro.props;

// Obtener navegaci√≥n de cada colecci√≥n
let navigation: any = {};

try {
  const matematicas = await getCollection('matematicas');
  const navMat = buildNavigationFromLessonsWithCollection(matematicas, 'matematicas');
  navigation = mergeNavigations(navigation, navMat);
} catch (e) {}

try {
  const fisica = await getCollection('fisica');
  const navFis = buildNavigationFromLessonsWithCollection(fisica, 'fisica');
  navigation = mergeNavigations(navigation, navFis);
} catch (e) {}

try {
  const quimica = await getCollection('quimica');
  const navQui = buildNavigationFromLessonsWithCollection(quimica, 'quimica');
  navigation = mergeNavigations(navigation, navQui);
} catch (e) {}

try {
  const ciencias = await getCollection('ciencias');
  const navCie = buildNavigationFromLessonsWithCollection(ciencias, 'ciencias');
  navigation = mergeNavigations(navigation, navCie);
} catch (e) {}

// √çconos de materias
const materiaIcons: Record<string, string> = {
  matematicas: 'üßÆ',
  fisica: 'üöÄ',
  quimica: '‚öõÔ∏è',
  ciencias: 'üåç',
};

// Determinar qu√© secciones deben estar abiertas bas√°ndose en la ruta actual
const pathParts = currentPath.split('/').filter(Boolean);
const currentMateria = pathParts[0] || '';
const currentUnidad = pathParts[1] || '';
const currentBloque = pathParts[2] || '';
---

<aside class="sidebar">
  <div class="sidebar-header">
    <a href="/" class="logo">
      <span class="logo-icon">üéì</span>
      <span class="logo-text">Ediprofe</span>
    </a>
  </div>
  
  <nav class="sidebar-nav">
    {Object.entries(navigation).map(([materiaKey, materia]: [string, any]) => (
      <div class="nav-section">
        <details open={currentMateria === materiaKey} class="nav-details materia-details">
          <summary class="nav-section-title">
            <span class="nav-icon">
              {materiaIcons[materiaKey] || 'üìö'}
            </span>
            <span class="nav-text">{materia.name}</span>
            <span class="chevron">‚Ä∫</span>
          </summary>
          
          <div class="nav-content">
            {Object.entries(materia.unidades).map(([unidadKey, unidad]: [string, any]) => (
              <details open={currentUnidad === unidadKey} class="nav-details unidad-details">
                <summary class="nav-unidad-title">
                  <span class="nav-text">{unidad.name}</span>
                  <span class="chevron">‚Ä∫</span>
                </summary>
                
                <div class="nav-content">
                  {Object.entries(unidad.bloques).map(([bloqueKey, bloque]: [string, any]) => (
                    <details open={currentBloque === bloqueKey} class="nav-details bloque-details">
                      <summary class="nav-bloque-title">
                        <span class="nav-text">{bloque.name}</span>
                        <span class="chevron">‚Ä∫</span>
                      </summary>
                      
                      <ul class="nav-lessons">
                        {bloque.lecciones.map((leccion: any) => (
                          <li>
                            <a 
                              href={`/${leccion.slug}`}
                              class:list={['nav-lesson-link', { active: currentPath === `/${leccion.slug}` }]}
                            >
                              <span class="lesson-dot"></span>
                              {leccion.title}
                            </a>
                          </li>
                        ))}
                      </ul>
                    </details>
                  ))}
                </div>
              </details>
            ))}
          </div>
        </details>
      </div>
    ))}
    
    {Object.keys(navigation).length === 0 && (
      <div class="nav-empty">
        <p>No hay contenido disponible a√∫n.</p>
        <p>Agrega archivos .md en <code>src/content/</code></p>
      </div>
    )}
  </nav>
</aside>

<style>
  .sidebar {
    width: 260px;
    background: var(--bg-secondary);
    border-right: 1px solid var(--border-color, #e2e8f0);
    height: 100vh;
    position: sticky;
    top: 0;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
  }

  :global(html.dark) .sidebar {
    border-right-color: #334155;
    background: #0f172a;
  }

  .sidebar-header {
    padding: 1rem 1.25rem;
    border-bottom: 1px solid rgba(255,255,255,0.1);
    background: linear-gradient(135deg, #0f172a 0%, #1e3a5f 100%);
    position: relative;
    overflow: hidden;
  }

  .sidebar-header::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -30%;
    width: 100px;
    height: 100px;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.3) 0%, transparent 70%);
    pointer-events: none;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    text-decoration: none;
    color: white;
    position: relative;
    z-index: 1;
  }

  .logo:hover {
    text-decoration: none;
  }

  .logo-icon {
    font-size: 1.5rem;
  }

  .logo-text {
    font-size: 1.25rem;
    font-weight: 800;
    background: linear-gradient(90deg, #fbbf24, #f59e0b);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .sidebar-nav {
    flex: 1;
    padding: 0.75rem;
    overflow-y: auto;
  }

  .nav-section {
    margin-bottom: 0.375rem;
  }

  /* Details/Summary styling */
  .nav-details {
    border-radius: 8px;
  }

  .nav-details summary {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    cursor: pointer;
    list-style: none;
    padding: 0.625rem 0.875rem;
    border-radius: 8px;
    transition: all 0.15s;
    user-select: none;
  }

  .nav-details summary::-webkit-details-marker {
    display: none;
  }

  .nav-details summary:hover {
    background: rgba(37, 99, 235, 0.1);
  }

  .chevron {
    margin-left: auto;
    font-size: 0.875rem;
    color: var(--text-secondary);
    transition: transform 0.2s;
  }

  .nav-details[open] > summary .chevron {
    transform: rotate(90deg);
    color: var(--color-primary);
  }

  .nav-content {
    padding-left: 0.875rem;
    margin-left: 0.75rem;
    border-left: 2px solid rgba(37, 99, 235, 0.2);
  }

  :global(html.dark) .nav-content {
    border-left-color: rgba(59, 130, 246, 0.3);
  }

  /* Materia level */
  .materia-details > summary {
    background: linear-gradient(135deg, rgba(37, 99, 235, 0.08), rgba(59, 130, 246, 0.04));
    border: 1px solid rgba(37, 99, 235, 0.1);
  }

  :global(html.dark) .materia-details > summary {
    background: linear-gradient(135deg, rgba(37, 99, 235, 0.15), rgba(59, 130, 246, 0.08));
    border-color: rgba(59, 130, 246, 0.2);
  }

  .materia-details[open] > summary {
    background: linear-gradient(135deg, rgba(37, 99, 235, 0.12), rgba(59, 130, 246, 0.08));
    border-color: rgba(37, 99, 235, 0.2);
  }

  .nav-section-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  .nav-icon {
    font-size: 1.125rem;
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(37, 99, 235, 0.1);
    border-radius: 6px;
  }

  :global(html.dark) .nav-icon {
    background: rgba(59, 130, 246, 0.15);
  }

  /* Unidad level */
  .nav-unidad-title {
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--text-primary);
  }

  /* Bloque level */
  .nav-bloque-title {
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--text-secondary);
  }

  /* Lessons */
  .nav-lessons {
    list-style: none;
    margin: 0;
    padding: 0.25rem 0;
  }

  .nav-lessons li {
    margin-bottom: 0.125rem;
  }

  .nav-lesson-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    font-size: 0.8125rem;
    color: var(--text-primary);
    text-decoration: none;
    border-radius: 6px;
    transition: all 0.15s;
    border-left: 2px solid transparent;
    margin-left: -2px;
  }

  .nav-lesson-link:hover {
    background: rgba(37, 99, 235, 0.08);
    color: var(--color-primary);
    text-decoration: none;
    border-left-color: var(--color-primary);
  }

  .nav-lesson-link.active {
    background: linear-gradient(90deg, rgba(37, 99, 235, 0.15), rgba(37, 99, 235, 0.05));
    color: var(--color-primary);
    font-weight: 600;
    border-left-color: var(--color-primary);
  }

  .lesson-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--text-secondary);
    flex-shrink: 0;
    transition: all 0.15s;
  }

  .nav-lesson-link:hover .lesson-dot,
  .nav-lesson-link.active .lesson-dot {
    background: var(--color-primary);
    box-shadow: 0 0 6px rgba(37, 99, 235, 0.5);
  }

  .nav-empty {
    text-align: center;
    padding: 2rem 1rem;
    color: var(--text-secondary);
  }

  .nav-empty code {
    background: rgba(37, 99, 235, 0.1);
    color: var(--color-primary);
    padding: 0.2em 0.5em;
    border-radius: 4px;
    font-size: 0.8em;
  }

  /* Scrollbar personalizado */
  .sidebar-nav::-webkit-scrollbar {
    width: 6px;
  }

  .sidebar-nav::-webkit-scrollbar-track {
    background: transparent;
  }

  .sidebar-nav::-webkit-scrollbar-thumb {
    background: rgba(37, 99, 235, 0.2);
    border-radius: 3px;
  }

  .sidebar-nav::-webkit-scrollbar-thumb:hover {
    background: rgba(37, 99, 235, 0.3);
  }

  /* Ocultar en m√≥vil */
  @media (max-width: 1024px) {
    .sidebar {
      display: none;
    }
  }
</style>
