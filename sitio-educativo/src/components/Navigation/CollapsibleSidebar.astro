---
import { getCollection } from 'astro:content';
import { buildNavigationFromLessonsWithCollection, mergeNavigations, formatName } from '../../utils/navigation-generator.js';

interface Props {
  currentPath: string;
}

const { currentPath } = Astro.props;

// Obtener navegaci贸n de cada colecci贸n
let navigation: any = {};

try {
  const matematicas = await getCollection('matematicas');
  const navMat = buildNavigationFromLessonsWithCollection(matematicas, 'matematicas');
  navigation = mergeNavigations(navigation, navMat);
} catch (e) {}

try {
  const fisica = await getCollection('fisica');
  const navFis = buildNavigationFromLessonsWithCollection(fisica, 'fisica');
  navigation = mergeNavigations(navigation, navFis);
} catch (e) {}

try {
  const quimica = await getCollection('quimica');
  const navQui = buildNavigationFromLessonsWithCollection(quimica, 'quimica');
  navigation = mergeNavigations(navigation, navQui);
} catch (e) {}

try {
  const ciencias = await getCollection('ciencias');
  const navCie = buildNavigationFromLessonsWithCollection(ciencias, 'ciencias');
  navigation = mergeNavigations(navigation, navCie);
} catch (e) {}

// Configuraci贸n de materias con colores
const materiaConfig: Record<string, { icon: string; color: string; gradient: string }> = {
  matematicas: { icon: 'М', color: '#ef4444', gradient: 'linear-gradient(135deg, #ef4444, #dc2626)' },
  fisica: { icon: '', color: '#3b82f6', gradient: 'linear-gradient(135deg, #3b82f6, #2563eb)' },
  quimica: { icon: '锔', color: '#a855f7', gradient: 'linear-gradient(135deg, #a855f7, #9333ea)' },
  ciencias: { icon: '', color: '#22c55e', gradient: 'linear-gradient(135deg, #22c55e, #16a34a)' },
};

// Funci贸n para contar lecciones de una materia
const countLessons = (materia: any) => {
  return Object.values(materia.unidades).reduce((acc: number, unidad: any) => {
    return acc + Object.values(unidad.bloques).reduce((acc2: number, bloque: any) => acc2 + bloque.lecciones.length, 0);
  }, 0);
};

// Filtrar materias que tienen al menos 1 lecci贸n
const filteredNavigation = Object.fromEntries(
  Object.entries(navigation).filter(([_, materia]: [string, any]) => countLessons(materia) > 0)
);

// Determinar qu茅 secciones deben estar abiertas bas谩ndose en la ruta actual
const pathParts = currentPath.split('/').filter(Boolean);
const currentMateria = pathParts[0] || '';
const currentUnidad = pathParts[1] || '';
const currentBloque = pathParts[2] || '';
---

<aside class="sidebar">
  <!-- Header Premium -->
  <div class="sidebar-header">
    <a href="/" class="logo">
      <div class="logo-icon-wrapper">
        <span class="logo-icon"></span>
      </div>
      <div class="logo-text-wrapper">
        <span class="logo-text">Ediprofe</span>
        <span class="logo-tagline">Tu gu铆a educativa</span>
      </div>
    </a>
  </div>
  
  <!-- Navegaci贸n Premium -->
  <nav class="sidebar-nav">
    <div class="nav-label">Materias</div>
    
    {Object.entries(filteredNavigation).map(([materiaKey, materia]: [string, any]) => {
      const config = materiaConfig[materiaKey] || materiaConfig.fisica;
      const isActive = currentMateria === materiaKey;
      const lessonCount = Object.values(materia.unidades).reduce((acc: number, unidad: any) => {
        return acc + Object.values(unidad.bloques).reduce((acc2: number, bloque: any) => acc2 + bloque.lecciones.length, 0);
      }, 0);
      
      return (
        <div class={`nav-section nav-section-${materiaKey}`}>
          <details open={isActive} class="nav-details materia-details">
            <summary class="nav-materia-summary">
              <div class="materia-icon" style={`background: ${config.gradient}`}>
                {config.icon}
              </div>
              <div class="materia-info">
                <span class="materia-name">{materia.name}</span>
                <span class="materia-count">{lessonCount} lecciones</span>
              </div>
              <span class="nav-chevron">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="9 18 15 12 9 6"/>
                </svg>
              </span>
            </summary>
            
            <div class="nav-content">
              {Object.entries(materia.unidades).map(([unidadKey, unidad]: [string, any], unidadIndex: number) => (
                <details open={currentUnidad === unidadKey} class="nav-details unidad-details">
                  <summary class="nav-unidad-summary">
                    <span class="unidad-number" style={`background: ${config.gradient}`}>{unidadIndex + 1}</span>
                    <span class="unidad-name">{unidad.name}</span>
                    <span class="nav-chevron-small">
                      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="9 18 15 12 9 6"/>
                      </svg>
                    </span>
                  </summary>
                  
                  <div class="nav-content-inner">
                    {Object.entries(unidad.bloques).map(([bloqueKey, bloque]: [string, any]) => (
                      <details open={currentBloque === bloqueKey} class="nav-details bloque-details">
                        <summary class="nav-bloque-summary">
                          <span class="bloque-indicator" style={`background: ${config.color}`}></span>
                          <span class="bloque-name">{bloque.name}</span>
                          <span class="bloque-count">{bloque.lecciones.length}</span>
                        </summary>
                        
                        <ul class="nav-lessons">
                          {bloque.lecciones.map((leccion: any, leccionIndex: number) => {
                            const isLessonActive = currentPath === `/${leccion.slug}`;
                            return (
                              <li>
                                <a 
                                  href={`/${leccion.slug}`}
                                  class:list={['nav-lesson-link', { active: isLessonActive }]}
                                  style={isLessonActive ? `--accent-color: ${config.color}` : ''}
                                >
                                  <span class="lesson-number">{leccionIndex + 1}</span>
                                  <span class="lesson-title">{leccion.title}</span>
                                  {isLessonActive && <span class="lesson-active-indicator"></span>}
                                </a>
                              </li>
                            );
                          })}
                        </ul>
                      </details>
                    ))}
                  </div>
                </details>
              ))}
            </div>
          </details>
        </div>
      );
    })}
    
    {Object.keys(filteredNavigation).length === 0 && (
      <div class="nav-empty">
        <div class="empty-icon"></div>
        <p>No hay contenido disponible</p>
        <code>src/content/</code>
      </div>
    )}
  </nav>
  
  <!-- Footer del Sidebar -->
  <div class="sidebar-footer">
    <a href="/" class="footer-link">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
        <polyline points="9 22 9 12 15 12 15 22"/>
      </svg>
      <span>Inicio</span>
    </a>
  </div>
</aside>

