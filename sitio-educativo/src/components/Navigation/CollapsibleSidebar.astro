---
import { getCollection } from 'astro:content';
import { buildNavigationFromLessonsWithCollection, mergeNavigations, formatName } from '../../utils/navigation-generator.js';

interface Props {
  currentPath: string;
}

const { currentPath } = Astro.props;

// Obtener navegaci√≥n de cada colecci√≥n
let navigation: any = {};

try {
  const matematicas = await getCollection('matematicas');
  const navMat = buildNavigationFromLessonsWithCollection(matematicas, 'matematicas');
  navigation = mergeNavigations(navigation, navMat);
} catch (e) {}

try {
  const fisica = await getCollection('fisica');
  const navFis = buildNavigationFromLessonsWithCollection(fisica, 'fisica');
  navigation = mergeNavigations(navigation, navFis);
} catch (e) {}

try {
  const quimica = await getCollection('quimica');
  const navQui = buildNavigationFromLessonsWithCollection(quimica, 'quimica');
  navigation = mergeNavigations(navigation, navQui);
} catch (e) {}

// Determinar qu√© secciones deben estar abiertas bas√°ndose en la ruta actual
const pathParts = currentPath.split('/').filter(Boolean);
const currentMateria = pathParts[0] || '';
const currentUnidad = pathParts[1] || '';
const currentBloque = pathParts[2] || '';
---

<aside class="sidebar">
  <div class="sidebar-header">
    <a href="/" class="logo">
      <span class="logo-icon">üìö</span>
      <span class="logo-text">EduSite</span>
    </a>
  </div>
  
  <nav class="sidebar-nav">
    {Object.entries(navigation).map(([materiaKey, materia]: [string, any]) => (
      <div class="nav-section">
        <details open={currentMateria === materiaKey} class="nav-details materia-details">
          <summary class="nav-section-title">
            <span class="nav-icon">
              {materiaKey === 'matematicas' ? 'üìê' : materiaKey === 'fisica' ? '‚öõÔ∏è' : 'üß™'}
            </span>
            <span class="nav-text">{materia.name}</span>
            <span class="chevron">‚Ä∫</span>
          </summary>
          
          <div class="nav-content">
            {Object.entries(materia.unidades).map(([unidadKey, unidad]: [string, any]) => (
              <details open={currentUnidad === unidadKey} class="nav-details unidad-details">
                <summary class="nav-unidad-title">
                  <span class="nav-text">{unidad.name}</span>
                  <span class="chevron">‚Ä∫</span>
                </summary>
                
                <div class="nav-content">
                  {Object.entries(unidad.bloques).map(([bloqueKey, bloque]: [string, any]) => (
                    <details open={currentBloque === bloqueKey} class="nav-details bloque-details">
                      <summary class="nav-bloque-title">
                        <span class="nav-text">{bloque.name}</span>
                        <span class="chevron">‚Ä∫</span>
                      </summary>
                      
                      <ul class="nav-lessons">
                        {bloque.lecciones.map((leccion: any) => (
                          <li>
                            <a 
                              href={`/${leccion.slug}`}
                              class:list={['nav-lesson-link', { active: currentPath === `/${leccion.slug}` }]}
                            >
                              <span class="lesson-dot"></span>
                              {leccion.title}
                            </a>
                          </li>
                        ))}
                      </ul>
                    </details>
                  ))}
                </div>
              </details>
            ))}
          </div>
        </details>
      </div>
    ))}
    
    {Object.keys(navigation).length === 0 && (
      <div class="nav-empty">
        <p>No hay contenido disponible a√∫n.</p>
        <p>Agrega archivos .md en <code>src/content/</code></p>
      </div>
    )}
  </nav>
</aside>

<style>
  .sidebar {
    width: var(--sidebar-width);
    background: var(--bg-secondary);
    border-right: 1px solid var(--border-color, #e2e8f0);
    height: 100vh;
    position: sticky;
    top: 0;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
  }

  :global(html.dark) .sidebar {
    border-right-color: #334155;
  }

  .sidebar-header {
    padding: 1.25rem 1rem;
    border-bottom: 1px solid var(--border-color, #e2e8f0);
  }

  :global(html.dark) .sidebar-header {
    border-bottom-color: #334155;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: var(--text-primary);
  }

  .logo:hover {
    text-decoration: none;
  }

  .logo-icon {
    font-size: 1.5rem;
  }

  .logo-text {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-primary);
  }

  .sidebar-nav {
    flex: 1;
    padding: 0.75rem;
    overflow-y: auto;
  }

  .nav-section {
    margin-bottom: 0.5rem;
  }

  /* Details/Summary styling */
  .nav-details {
    border-radius: 6px;
  }

  .nav-details summary {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
    list-style: none;
    padding: 0.5rem 0.75rem;
    border-radius: 6px;
    transition: background 0.15s;
    user-select: none;
  }

  .nav-details summary::-webkit-details-marker {
    display: none;
  }

  .nav-details summary:hover {
    background: rgba(37, 99, 235, 0.08);
  }

  .chevron {
    margin-left: auto;
    font-size: 0.875rem;
    color: var(--text-secondary);
    transition: transform 0.2s;
  }

  .nav-details[open] > summary .chevron {
    transform: rotate(90deg);
  }

  .nav-content {
    padding-left: 0.75rem;
    margin-left: 0.5rem;
    border-left: 1px solid var(--border-color, #e2e8f0);
  }

  :global(html.dark) .nav-content {
    border-left-color: #334155;
  }

  /* Materia level */
  .nav-section-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-primary);
  }

  .nav-icon {
    font-size: 1rem;
  }

  /* Unidad level */
  .nav-unidad-title {
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--text-primary);
  }

  /* Bloque level */
  .nav-bloque-title {
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--text-secondary);
  }

  /* Lessons */
  .nav-lessons {
    list-style: none;
    margin: 0;
    padding: 0.25rem 0;
  }

  .nav-lessons li {
    margin-bottom: 0.125rem;
  }

  .nav-lesson-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.375rem 0.75rem;
    font-size: 0.8125rem;
    color: var(--text-primary);
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.15s;
  }

  .nav-lesson-link:hover {
    background: rgba(37, 99, 235, 0.08);
    color: var(--color-primary);
    text-decoration: none;
  }

  .nav-lesson-link.active {
    background: rgba(37, 99, 235, 0.15);
    color: var(--color-primary);
    font-weight: 500;
  }

  .lesson-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--text-secondary);
    flex-shrink: 0;
  }

  .nav-lesson-link.active .lesson-dot {
    background: var(--color-primary);
  }

  .nav-empty {
    text-align: center;
    padding: 2rem 1rem;
    color: var(--text-secondary);
  }

  .nav-empty code {
    background: rgba(0,0,0,0.05);
    padding: 0.2em 0.4em;
    border-radius: 3px;
    font-size: 0.85em;
  }

  :global(html.dark) .nav-empty code {
    background: rgba(255,255,255,0.1);
  }

  /* Ocultar en m√≥vil */
  @media (max-width: 1024px) {
    .sidebar {
      display: none;
    }
  }
</style>
